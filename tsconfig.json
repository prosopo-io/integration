{
  "exclude": [
    "build/**/*",
    "**/build/**/*"
  ],
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "declaration": true,
    "resolveJsonModule": true,
    "noImplicitReturns": false,
    "noUnusedLocals": false,
    "noImplicitThis": false,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "strict": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noEmitOnError": true,
    "baseUrl": ".",
    "lib": ["esnext"],
    "paths": {
      "@prosopo/contract": [
        "./packages/contract/src"
      ],
      "@prosopo/contract/*": [
        "./packages/contract/src/*"
      ],
      "@prosopo/provider": [
        "./packages/provider/src"
      ],
      "@prosopo/provider/*": [
        "./packages/provider/src/*"
      ],
      "@prosopo/procaptcha": [
        "./packages/procaptcha/src"
      ],
      "@prosopo/procaptcha/*": [
        "./packages/procaptcha/src/*"
      ]
    }
  },
  "include": [
    "./packages/**/**/*",
    "packages/procaptcha/types.d.ts"
  ],
  "references": [
    {
      "path": "packages/procaptcha",
      "name": "@prosopo/procaptcha"
    },
    {
      "path": "packages/provider",
      "name": "@prosopo/provider"
    },
    {
      "path": "packages/contract",
      "name": "@prosopo/contract"
    }
  ]
}
